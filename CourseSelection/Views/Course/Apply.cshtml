@model Candidante

<div class="display-6">Apply</div>


<form method="post" asp-controller="Course" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label asp-for="SurName"></label>
        <input asp-for="SurName" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select class="form-control" asp-for="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Asp.Net Core MVC" checked=""/>
            <label>Asp.Net Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Asp.Net Core API"/>
            <label>Asp.Net Core API</label>
        </p>
        <p>
            <input id="blazor" type="radio" asp-for="SelectedCourse" value="Blazor"/>
            <label>Blazor</label>
        </p>
        <p>
            <input id="angular" type="radio" asp-for="SelectedCourse" value="Angular"/>
            <label>Angular</label>
        </p>
        <p>
            <input id="react" type="radio" asp-for="SelectedCourse" value="React"/>
            <label>React</label>
        </p>
    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>